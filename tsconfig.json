{
  "compilerOptions": {
    "outDir": "dist.local",
    "rootDir": ".",
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ES2020",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
